import java.util.*;

public class Q3 {
    
    public static boolean canWin(int leap, int[] game) 
    {
        boolean move = true;
        int curindex = 0;
        while(move)
        {
            if((curindex + leap >= game.length) || (curindex + 1 >game.length))
            {
                return true;
            }
            else if(game[curindex + leap] ==1 && game[curindex + 1] == 1)
            {
                return false;
            }
            if((curindex + leap < game.length) && game[curindex + leap] == 0)
            {
                curindex +=leap;
            }
            else if((curindex + 1 < game.length) && game[curindex + 1] == 0)
            {
                curindex += 1;
            }
            else if((curindex-1)>=0 && game[curindex - 1] == 0)
            {
                curindex -= 1;
            }     
        }

        return false;
    }


    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int q = scan.nextInt();
        while (q-- > 0) {
            int n = scan.nextInt();
            int leap = scan.nextInt();
            
            int[] game = new int[n];
            for (int i = 0; i < n; i++) {
                game[i] = scan.nextInt();
            }

            System.out.println( (canWin(leap, game)) ? "YES" : "NO" );
        }
        scan.close();
    }
    
} 
